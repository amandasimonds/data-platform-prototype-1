{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "uv-ui-components": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "changeDetection": "OnPush"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/uv-ui-components",
      "sourceRoot": "projects/uv-ui-components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/uv-ui-components/tsconfig.lib.json",
            "project": "projects/uv-ui-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/uv-ui-components/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/uv-ui-components/src/test.ts",
            "tsConfig": "projects/uv-ui-components/tsconfig.spec.json",
            "karmaConfig": "projects/uv-ui-components/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": ".eslintrc.json",
            "lintFilePatterns": ["projects/**/*.ts"]
          },
          "exclude": ["**/node_modules/**"]
        }
      }
    },
    "uv-ui-lib": {
      "projectType": "library",
      "root": "projects/uv-ui-lib",
      "sourceRoot": "projects/uv-ui-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/uv-ui-lib/tsconfig.lib.json",
            "project": "projects/uv-ui-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/uv-ui-lib/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/uv-ui-lib/src/test.ts",
            "tsConfig": "projects/uv-ui-lib/tsconfig.spec.json",
            "karmaConfig": "projects/uv-ui-lib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/uv-ui-lib/tsconfig.lib.json",
              "projects/uv-ui-lib/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "uv-ui-components"
}
